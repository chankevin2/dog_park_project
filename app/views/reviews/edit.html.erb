<center>
<div class="user-box">
<h1>Edit Review</h1>
<div class="field">
<%= form_for([@park, @review]) do |f| %>

  <b><%= f.label :rating%></b>
  <%= f.text_field :rating%>

  <b><%= f.label :body, "Review"%></b>
  <%= f.text_field :body%>

  <%= f.submit "Edit Review" %>

<% end %>
<%= button_to "Delete", park_review_path, method: :delete, data: {confirm: 'Are you sure?'} %><br><br>
<%= button_to "Back to #{@park.name}", park_path(@park), :method => :get %>
</div>
</center>
</div>
