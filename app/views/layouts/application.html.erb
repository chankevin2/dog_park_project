<!DOCTYPE html>
<html>
<head>
  <title>DogParkProject</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">


  <%= csrf_meta_tags %>
</head>
<body>

  <div class="top-bar">
    <div class="logo">
        <%= link_to image_tag("/logo/doglogo.png"), "/" %>
    </div>
    <div>
      <input type="search" placeholder="Search"> <button type="button" class="button">Search</button>
    </div>
    <section class="top-bar-section">
      <div class="right">
        <%- if current_user -%>
          <div><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></div>
        <%- else -%>
          <button><%= link_to 'Sign Up', new_user_registration_path %></button> / <button <%= link_to 'Sign In', new_user_session_path %></button>

        <%- end -%>
      </div>
    </section>
  </div>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

      <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

  <%= yield %>

  <%= javascript_include_tag 'application' %>

  <%- if Rails.env.development? || Rails.env.test? -%>
    <%= javascript_tag do %>
      window.railsEnv = '<%= Rails.env %>'
    <%- end -%>
  <%- end -%>
  <%= javascript_pack_tag 'application' %>

  <%= yield :extra_footer %>
</body>
</html>
